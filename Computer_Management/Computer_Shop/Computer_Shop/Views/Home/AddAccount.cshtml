@model Computer_Shop.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Account Adding</title>

    <style>
        .form-control{
            border:2px solid black;
        }
    </style>

</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="text-align:center;font-size:64px">Create Account</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <strong class="control-label col-md-2" style="font-size:32px">
                Username
            </strong>
            <div class="col-md-4">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong class="control-label col-md-2" style="font-size:32px">
                Password
            </strong>
            <div class="col-md-4">
                <input class="form-control text-box single-line" id="Password" name="Password" type="password" value="">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong class="control-label col-md-2" style="font-size:32px">
                Set Role
            </strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "col-md-2", @min = "2", @max = "4" } })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
            </div>
        </div>
            <div style="font-size:24px" class="col-md-4">
                2 : Storage Manager
                <br />
                3 : Salesman
                <br />
                4 : Accountant
            </div>

            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="hvr-hover1"  style="font-size:24px;border:2px solid black;background-color:black;color:white;border-radius:8px"/>
                </div>
            </div>
        </div>
    }
</body>
</html>
<div class="col-md-4">
    <a class="hvr-hover1" href="/Home/AccountList" style="font-size:32px;border:2px solid black;background-color:black;color:white;border-radius:8px">
        Back to View Order
    </a>
</div>

<br />
