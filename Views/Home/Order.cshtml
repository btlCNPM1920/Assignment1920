@model IEnumerable<Computer_Shop.Models.OriginalOrder>
@{
    ViewBag.Title = "AccountOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1 style="text-align:center;font-size:40px;margin:0px;padding:0px;margin-top:30px;font-family:'Times New Roman'">Order List</h1>
<style>
    .Delbtn {
        color: red
    }

    .report:hover {
        opacity: 0.6
    }
</style>

<table border="5" cellpadding="10" cellspacing="5" align="center">

    <tr style="font-size:200%;text-align:center;font-family:'Times New Roman'">
        <br>
        <td>Order ID</td>
        <td>Employee Name</td>
        <td>Create Date</td>
        <td>Customer Name</td>
        <td>Status</td>
        @if (Session["role"] == "admin" || Session["role"] == "Salesman")
        {
            <td>Action</td>
        }
        </br>
    </tr>

    @{
        foreach (Computer_Shop.Models.OriginalOrder x in Model)
        {
        <tr style="font-size:24px" class="tr">
            <td>@x.Order_ID</td>
            <td>@x.UserName</td>
            <td>@x.Create_Date</td>
            <td>@x.Customer_Name</td>
            <td>@x.Status</td>
            @if (Session["role"] == "admin")
            {
        <td>
            @Html.ActionLink("Delete", "DeleteOrder", new { oid = x.Order_ID }, new { @class = "Delbtn" }) <strong>|</strong>
                        @Html.ActionLink("View Details", "DetailsOrder", new { oid = x.Order_ID }) <strong>|</strong>
                        @Html.ActionLink("Create Order Details", "AddDetailsOrder", new { oid = x.Order_ID })
                    </td>
            }
            else if (Session["role"] == "Salesman")
            {
                <td>@Html.ActionLink("Delete", "DeleteOrder", new { oid = x.Order_ID }, new { @class = "Delbtn" }) <strong>|</strong>
                    @Html.ActionLink("View Details", "DetailsOrder", new { oid = x.Order_ID }) <strong>|</strong>
                        @Html.ActionLink("Create Order Details", "AddDetailsOrder", new { oid = x.Order_ID })
                </td>
            }

        </tr>
        }
    }
</table>

